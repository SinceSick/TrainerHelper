<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardElevation="6dp"
    android:layout_marginBottom="5dp"
    android:padding="5dp"
    android:id="@+id/gameCardView">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fpName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="Артемьев А.П."
                android:textSize="25sp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fpFirstSet"
                    android:gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp"
                    android:background="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/fpSecondSet"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp"
                    android:background="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/fpThirdSet"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textSize="25sp"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimaryDark"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/spName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="Надаль А.П."
                android:textSize="25sp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/spFirstSet"
                    android:gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp"
                    android:background="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/spSecondSet"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp"
                    android:background="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/spThirdSet"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textSize="25sp"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimaryDark"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/gameName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="ATP-LONDON"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/gameDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="20.05.2020"
                android:textSize="20sp"
                android:textColor="@color/colorBlack">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>