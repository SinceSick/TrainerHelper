<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trainerhelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GameActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".GameEditActivity"
            android:parentActivityName=".GameListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameListActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TrainingPhysicalActivity"
            android:parentActivityName=".PhysicalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PhysicalActivity"
            android:parentActivityName=".TrainingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TrainingElementsActivity"
            android:parentActivityName=".EditHitsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditHitsActivity"
            android:parentActivityName=".GameElementsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameElementsActivity"
            android:parentActivityName=".TrainingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PlayerInfoActivity"
            android:parentActivityName=".PlayerListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TrainingActivity"
            android:parentActivityName=".GroupListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PlayerListActivity"
            android:parentActivityName=".TrainingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GroupListActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddGroupActivity"
            android:parentActivityName=".GroupListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddPlayerActivity"
            android:parentActivityName=".PlayerListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>